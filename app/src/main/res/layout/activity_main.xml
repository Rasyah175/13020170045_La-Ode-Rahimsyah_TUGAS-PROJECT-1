<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="300dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:text="MENGHITUNG LUAS DAN VOLUME PRISMA SEGITIGA">
            </TextView>
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/tinggi"
                android:layout_width="match_parent"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Tinggi Segitiga">
            </EditText>
            <EditText
                android:id="@+id/alas"
                android:hint="Alas Segitiga"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </EditText>
            <EditText
                android:id="@+id/t_prisma"
                android:hint="Tinggi Prisma"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </EditText>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:id="@+id/luas"
            android:layout_width="100dp"
            android:text="Hitung LUAS"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="60dp"></Button>
        <Button
            android:id="@+id/volume"
            android:layout_width="100dp"
            android:text="Hitung Volume"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_height="60dp"></Button>
        <Button
            android:id="@+id/reset"
            android:layout_width="100dp"
            android:text="RESET"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="60dp"></Button>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/hasil"
        android:layout_width="300dp"
        android:layout_marginStart="50dp"
        android:hint="HASIL"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="50dp">
    </TextView>
</LinearLayout>

</LinearLayout>